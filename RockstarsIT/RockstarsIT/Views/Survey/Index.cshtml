@model IEnumerable<SurveyViewModel>

@{
    ViewData["Title"] = "Enquête overzicht";
}

<link rel="stylesheet" href="~/css/Survey.css/Index.css" />

<h1>Enquête overzicht</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Toevoegen</a>
</p>

<div class="grid">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <h2>@item.Title</h2>
            </div>
            <div class="card-body">
                <p>@item.Description</p>
                <div class="actions">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                </div>
            </div>
        </div>
    }
</div>






