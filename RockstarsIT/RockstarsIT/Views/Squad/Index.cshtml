@model IEnumerable<SquadViewModel>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Squads.css/Index.css" />

<h1>Squads</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg voeg-toe-button">TOEVOEGEN</a>
    @*  <a asp-action="Create" class="btn btn-primary btn-lg">Toevoegen</a> *@
</p>

<div class="grid">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card">
                <a class="plus-button" asp-action="Edit" asp-route-id="@item.Id" aria-label="Add Item">+</a>
                <div class="card-header">
                    <h2>@item.Name</h2>
                </div>
                @* <button class="plus-button" a asp-action="Edit" asp-route-id="@item.Id" aria-label="Add Item">+</button>
                <div class="card-header">
                    <h2>@item.Name</h2>
                </div> *@
                <div class="card-body">
                    <p>@item.Description</p>
                    <div class="actions">
                         @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                    @* <button class="plus-button" aria-label="Add Item">+</button> *@
                </div>
            </div>
        }
    }
    else
    {
        <p>Geen Squads gevonden.</p>
    }
</div>