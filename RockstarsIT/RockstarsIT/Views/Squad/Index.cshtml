<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        Kies een bedrijf
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        @if (ViewBag.Companies != null)
        {
            foreach (var company in ViewBag.Companies)
            {
                <li>
                    <a asp-route-companyId="@company.Id">
                        @company.Name
                    </a>
                </li>
            }
        }
        else
        {
            <li><a href="#">Geen bedrijven beschikbaar</a></li>
        }
    </ul>
</div>

<div class="grid">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card">
                <a class="plus-button" asp-action="Edit" asp-route-id="@item.Id" aria-label="Add Item">+</a>
                <div class="card-header">
                    <h2>@item.Name</h2>
                </div>
                <div class="card-body">
                    <p>@item.Description</p>
                    @if (item.Company != null)
                    {
                        <p>Gekopppeld aan @item.Company.Name</p>
                    }
                    else
                    {
                        <p>Niet gekoppeld aan een bedrijf</p>  
                    }
                    <div class="actions">
                         @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="button button-primary btn-sm">Details</a>
                        @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a> *@
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Geen Squads gevonden.</p>
    }
</div>
