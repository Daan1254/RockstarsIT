<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RockstarsIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RockstarsIT.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="main-container">
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTbyT0H-ajNqyO7jH78Nkww6cwlI8VFx_w5yC3te5d1xAOEnF-eHOyPX6nVvZuntUrtSLo&usqp=CAU.png" alt="RockstarsIT Logo" class="icon-img" />
                <h1 class="dashboard-title">DASHBOARD</h1>
            </div>
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="btn btn-link" href="@Url.Action("Index", "Survey")">
                        <i class="bi bi-pencil-fill"></i> ENQUÊTES
                    </a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-link">
                        <i class="bi bi-check-circle-fill"></i> ANTWOORDEN
                    </a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-link" href="@Url.Action("Index", "Squad")">
                        <i class="bi bi-people-fill"></i> SQUADS
                    </a>
                </li>
                @* <li class="nav-item"> *@
                @*     <a class="btn btn-link" href="@Url.Action("Index", "Account")"> *@
                @*         <i class="bi bi-people-fill"></i> ACCOUNT *@
                @*     </a> *@
                @* </li> *@
            </ul>
        </div>
        <main  role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("ScriptAddQuestions", required: false) <!-- Voeg deze regel toe om de ScriptAddQuestions sectie te renderen -->
</body>
</html>
